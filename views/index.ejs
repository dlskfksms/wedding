        // 작성하기 버튼
        writeBtn.onclick = function() {
            letterCoverPickModal.style.display = "block";
            letterCoverPickModal.style.overflow = "hidden";
            letterWriteModal.style.overflow = "hidden";
            body.style.overflow = 'hidden';
        }

        coverImages.forEach(function(cover) {
            cover.addEventListener('click', function() {
                // 이미지 인덱스를 숨겨진 input에 세팅
                coverImageIndex.value = this.getAttribute('data-index');
                // 선택된 커버 이미지를 표시
                document.getElementById('selectedCoverImage').src = this.src;

                // 편지 작성 모달 표시
                letterWriteModal.style.display = 'block';
                // 커버 선택 모달 숨김
                letterCoverPickModal.style.display = 'none';
            });
        });

        // 취소 버튼
        cancelBtn.onclick = function() {
            letterWriteModal.style.display = "none";
            letterWriteModal.style.removeProperty('overflow');
            letterCoverPickModal.style.removeProperty('overflow');
            body.style.removeProperty('overflow');
        }

        // 닫기 버튼
        closeBtn.forEach(e => {
            e.addEventListener('click', function() {
                letterCoverPickModal.style.display = "none";
                letterWriteModal.style.display = "none";
                letterWriteModal.style.removeProperty('overflow');
                letterCoverPickModal.style.removeProperty('overflow');
                body.style.removeProperty('overflow');
            });
        });

        // 전송 버튼
        submitBtn.onclick = function () {
            const sender = document.getElementById('letterSender');
            const content = document.getElementById('letterContent');
            const imgIndex = coverImageIndex.value;

            if (sender.value.trim() === "" || content.value.trim() === "") {
                alert("모든 입력 칸에 내용을 채워주세요.");
                return;
            }

            fetch('http://localhost:2000/letter', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    sender: sender.value,
                    content: content.value,
                    imgIndex: imgIndex
                }),
            })
            .then(data => {
                letterWriteModal.style.display = "none";

                letterDataLength += 1;
                letterContent.innerHTML += `
                    <div class="letter-content">
                        <img src="/images/letter_${imgIndex}.png">
                        <div class="letter-content-sender">${sender.value}</div>
                    </div>`;

                letterCoverPickModal.style.removeProperty('overflow');
                letterWriteModal.style.removeProperty('overflow');
                body.style.removeProperty('overflow');
                sender.value = '';
                content.value = '';
